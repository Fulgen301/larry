nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  a.navbar-brand(href=appdir + '/')
    img.d-inline-block.align-top(src=appdir + "/assets/bootstrap-solid.svg", width='30', height='30', alt='')
    |  Larry
  button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
    span.navbar-toggler-icon

  div.collapse.navbar-collapse#navbarSupportedContent
    form.form-inline.my-2.my-lg-0
      input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
    ul.navbar-nav.mr-auto
      li.nav-item.active
        a.nav-link(href=appdir + '/uploads') Home
          span.sr-only (current)

      li.nav-item.active
        a.nav-link(href=appdir + "/uploads/create") Create!

    ul.navbar-nav.ml-auto
      if user
        li.nav-item.dropdown
          a.nav-link.dropdown-toggle(href='#', id='navbarDropdown', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')= user.username
          div.dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdown')
            a.dropdown-item(href=appdir + `/users/${user.username}`) Profile
            a.dropdown-item(href=appdir +"/user/prefs") Preferences
            div.dropdown-divider
            form(action=appdir+  "/auth/logout", method="POST")
              button.dropdown-item(type="submit") Logout
      else
        li.nav-item.active
          a.nav-link(href=appdir + "/auth/login") Login
